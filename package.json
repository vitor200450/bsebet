{
  "name": "bsebet",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "bun --env-file=.env run turbo -F web dev",
    "check": "biome check --write .",
    "db:push": "turbo -F @bsebet/db db:push",
    "db:studio": "turbo -F @bsebet/db db:studio",
    "db:generate": "turbo -F @bsebet/db db:generate",
    "db:migrate": "turbo -F @bsebet/db db:migrate",
    "db:seed": "turbo -F @bsebet/db db:seed",
    "db:push:prod": "bun --env-file=.env.production run turbo -F @bsebet/db db:push",
    "db:migrate:prod": "bun --env-file=.env.production run turbo -F @bsebet/db db:migrate",
    "db:studio:prod": "bun --env-file=.env.production run turbo -F @bsebet/db db:studio",
    "db:generate:prod": "bun --env-file=.env.production run turbo -F @bsebet/db db:generate",
    "deploy": "turbo -F @bsebet/infra deploy",
    "destroy": "turbo -F @bsebet/infra destroy"
  },
  "dependencies": {
    "@bsebet/env": "workspace:*",
    "dotenv": "^17.3.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@bsebet/config": "workspace:*",
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/node": "^22.13.14",
    "turbo": "^2.8.3",
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.6"
}
